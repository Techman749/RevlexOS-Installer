function keyinput64()
key1 = ""
 term.setCursorPos(8,10)
 write("Key:")
 input = read()
 if input == key1 then
 term.setCursorPos(9,18)
 print("                              ")
 term.setCursorPos(9,18)
 textutils.slowPrint("Verifying key...")
 sleep(2)
 term.setCursorPos(9,18)
 print("                ")
 term.setCursorPos(9,18)
 textutils.slowPrint("Key is valid!")
 sleep(2)
 install64()
 else
 term.setCursorPos(9,18)
 print("                              ")
 term.setCursorPos(9,18)
 textutils.slowPrint("Verifying key...")
 sleep(2)
 term.setCursorPos(9,18)
 print("                      ")
 term.setCursorPos(9,18)
